<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/one"
        android:layout_toLeftOf="@+id/two"
        android:text="1"
        android:layout_above="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/two"
        android:layout_alignLeft="@+id/five"
        android:layout_above="@+id/five"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/three"
        android:layout_toRightOf="@+id/two"
        android:layout_above="@+id/six"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/four"
        android:layout_toLeftOf="@+id/five"
        android:layout_below="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        />

    <Button

        android:id="@+id/five"
        android:text="5"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/six"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"/>

    <Button
        android:id="@+id/seven"
        android:layout_below="@+id/four"
        android:layout_alignLeft="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"/>

    <Button
        android:id="@+id/eight"
        android:layout_below="@+id/five"
        android:layout_alignLeft="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"/>

    <Button
        android:id="@+id/nine"
        android:layout_below="@+id/six"
        android:layout_alignLeft="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"/>

    <Button
        android:id="@+id/zero"
        android:layout_below="@+id/eight"
        android:layout_alignLeft="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>

    <Button
        android:id="@+id/plus"
        android:layout_toRightOf="@+id/three"
        android:text="+"
        android:layout_above="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/minus"
        android:layout_toRightOf="@+id/six"
        android:text="-"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mul"
        android:layout_toRightOf="@+id/six"
        android:text="*"
        android:layout_below="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/div"
        android:layout_toRightOf="@+id/nine"
        android:text="/"
        android:layout_below="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/equ"
        android:layout_toRightOf="@+id/zero"
        android:text="="
        android:layout_below="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/last"
        android:layout_toLeftOf="@+id/zero"
        android:text="."
        android:layout_below="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>